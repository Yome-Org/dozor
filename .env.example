# Dozor HTTP API binding inside local compose.
API_HOST=0.0.0.0
API_PORT=8080

# Postgres container settings and the JDBC URL used by Dozor.
POSTGRES_DB=dozor
POSTGRES_USERNAME=dozor
POSTGRES_PASSWORD=dozor
POSTGRES_PORT=5432
POSTGRES_JDBC_URL=jdbc:postgresql://postgres:5432/dozor

# Redis settings for temporal buckets and dirty-set storage.
REDIS_ENABLED=true
REDIS_URI=redis://redis:6379
REDIS_PORT=6379

# Mock health service exposed port for local failure simulation.
MOCK_HEALTH_PORT=18080

# Demo wait times for local smoke scenarios.
# Local docker compose uses a demo config with short incident and recovery timings.
# Critical still takes time to accumulate because health-check failure escalation
# and state thresholds must both be satisfied.
DEMO_CRITICAL_WAIT=30
DEMO_RECOVERY_WAIT=30

# Telegram delivery. Keep disabled until bot token and chat id are configured.
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
